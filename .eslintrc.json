{
  "extends": ["eslint:recommended", "google"],
  "parser": "babel-eslint",
  "env": {
      "browser": true,
      "mocha": true,
      "es6": true,
      "node": true
  },
  "plugins": [
      "react",
      "jsx-a11y"
  ],
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "experimentalObjectRestSpread": true
      }
  },
  "rules" : {
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,

      "require-jsdoc": "off",
      "comma-dangle": [2, "never"],
      "new-cap": [2, { "capIsNew": false }],
      "no-unused-vars": [2, { "vars": "all", "args": "after-used" }],
      "no-invalid-this": "off"
  }
}
